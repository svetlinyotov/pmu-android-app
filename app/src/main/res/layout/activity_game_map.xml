<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameMap"
    tools:context=".GameMapActivity">

    <fragment
        android:id="@+id/mapInGameMode"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvMarkersFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="0/20"
        android:textColor="#340000"
        android:textSize="32sp" />

    <ImageButton
        android:id="@+id/buttonCamera"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_camera"
        android:contentDescription="@string/description" />

    <TextView
        android:id="@+id/textScanQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/button_camera"
        android:textColor="#340000"
        android:textSize="32sp" />

    <ImageButton
        android:id="@+id/buttonGiveUp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_give_up"
        android:contentDescription="@string/description" />
</RelativeLayout>