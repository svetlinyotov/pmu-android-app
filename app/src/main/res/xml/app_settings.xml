<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_volume_down_999_24dp"
        android:padding="10dp"
        android:summary="@string/settings_mute"
        app:key="settingsIsBGMusicMuted" />

    <ListPreference
        android:entries="@array/settings_languages_values"
        android:entryValues="@array/settings_languages_keys"
        android:icon="@drawable/ic_language_999_24dp"
        android:key="settingsCurrentLanguage"
        android:title="@string/settings_language" />

</PreferenceScreen>
